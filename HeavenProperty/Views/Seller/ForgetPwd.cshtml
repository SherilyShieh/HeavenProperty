@model ForgetPwdViewModel
@{
    ViewData["Title"] = "Forget Password";
}

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<div class="register-border my-acknowledgement-div-align">
    <div class="my-div-style">
        <h3>Reset Password</h3>

        <h2>  </h2>
    </div>
    <span class="text-danger">@ViewBag.AsyncError</span>
    <form method="post" asp-action="ForgetPwd" asp-controller="Seller" class="my-form-column my-form">
        <div class="row align-items-center my-form-div-style">
            <label asp-for="Email" class="my-label">Email:</label>
            <div class="my-input">
                <input type="text" name="Email" class="form-control" asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="row align-items-center my-form-div-style">
            <label asp-for="Password" class="my-label">Password:</label>
            <div class="my-input">
                <input type="password" name="Password" class="form-control" asp-for="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="row align-items-center my-form-div-style">
            <label asp-for="ConfirmPassword" class="my-label">Confirm:</label>
            <div class="my-input">
                <input type="password" name="ConfirmPassword" class="form-control" asp-for="ConfirmPassword" />

                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="my-btn-position">
            <button type="submit" class="btn btn-dark my-btn-style">Reset</button>
        </div>

    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}